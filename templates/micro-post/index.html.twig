{% extends 'base.html.twig' %}

{% block body %}
    {% for flash in app.flashes('notice') %}
        <div class="alert alert-info">
            {{ flash }}
        </div>
    {% endfor %}

    <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>
    <small class="d-block text-left mt-3 border-bottom border-gray pb-2">
        <a class="btn btn-sm btn-primary" href="{{ path('micro_post_add') }}">Add new</a>
    </small>
    {% for post in posts %}
        <a href="{{ path('micro_post_post', {'id': post.id}) }}">
            {% include './micro-post/includes/post-item.html.twig' %}
        </a>
        <small class="d-block text-right mt-3">
            <a class="d-inline-block mr-3" href="{{ path('micro_post_edit', {'id': post.id}) }}">edit</a>
            <a class="d-inline-block" href="{{ path('micro_post_delete', {'id': post.id}) }}">delete</a>
        </small>
    {% endfor %}
    <small class="d-block text-center mt-3">
        <a href="#">All updates</a>
    </small>
{% endblock %}